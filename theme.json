{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "color": {
      "palette": [
        {
          "slug": "primary",
          "color": "#2563eb",
          "name": "Primary"
        },
        {
          "slug": "secondary",
          "color": "#64748b",
          "name": "Secondary"
        },
        {
          "slug": "accent",
          "color": "#f59e0b",
          "name": "Accent"
        },
        {
          "slug": "background",
          "color": "#ffffff",
          "name": "Background"
        },
        {
          "slug": "foreground",
          "color": "#1E3D79",
          "name": "Foreground"
        },
        {
          "slug": "muted",
          "color": "#f8fafc",
          "name": "Muted"
        }
      ]
    },
    "background": {
      "backgroundImage": true
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "\"Open Sans\", -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif",
          "name": "Open Sans",
          "slug": "open-sans"
        }
      ],
      "fontSizes": [
        {
          "size": "12px",
          "slug": "xs",
          "name": "Extra Small"
        },
        {
          "size": "14px",
          "slug": "small",
          "name": "Small"
        },
        {
          "size": "16px",
          "slug": "medium",
          "name": "Medium"
        },
        {
          "size": "18px",
          "slug": "large",
          "name": "Large"
        },
        {
          "size": "22px",
          "slug": "xl",
          "name": "Extra Large"
        },
        {
          "size": "26px",
          "slug": "xxl",
          "name": "Extra Extra Large"
        },
        {
          "size": "32px",
          "slug": "xxxl",
          "name": "Extra Extra Extra Large"
        },
        {
          "size": "48px",
          "slug": "huge",
          "name": "Huge"
        }
      ]
    },
    "spacing": {
      "units": ["px", "em", "rem", "vh", "vw", "%"],
      "padding": true,
      "margin": true
    },
    "layout": {
      "contentSize": "1200px",
      "wideSize": "1400px"
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--background)",
      "text": "var(--wp--preset--color--foreground)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--open-sans)",
      "fontSize": "var(--wp--preset--font-size--medium)",
      "lineHeight": "1.6"
    },
    "elements": {
      "h1": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--open-sans)",
          "fontSize": "48px",
          "fontWeight": "600",
          "lineHeight": "auto"
        }
      },
      "h2": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--open-sans)",
          "fontSize": "34px",
          "fontWeight": "400",
          "lineHeight": "1.4"
        }
      },
      "h3": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--open-sans)",
          "fontSize": "32px",
          "fontWeight": "400",
          "lineHeight": "1.4"
        }
      },
      "h4": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--open-sans)",
          "fontSize": "26px",
          "fontWeight": "600",
          "lineHeight": "auto"
        }
      },
      "h5": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--open-sans)",
          "fontSize": "15px",
          "fontWeight": "600",
          "lineHeight": "1.6"
        }
      },
      "h6": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--open-sans)",
          "fontSize": "14px",
          "fontWeight": "600",
          "lineHeight": "1.4"
        }
      },
      "button": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--open-sans)",
          "fontSize": "18px",
          "fontWeight": "500",
          "lineHeight": "auto",
          "borderRadius": "0"
        }
      }
    },
    "blocks": {
      "core/button": {
        "border": {
          "radius": "0px"
        },
        "typography": {
        "fontWeight": "400"
        },
        "color": {
          "background": "var(--wp--preset--color--foreground)",
          "text": "#ffffff"
        }
      }
    }
  }
}
